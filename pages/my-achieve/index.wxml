<view class="container">
    <image src="{{url}}bg1.png" class="img"/>


    <scroll-view class="achieve-list-wrap" scroll-y>

        <view wx:for="{{achieveList}}"
              wx:for-item="item"
              wx:key="index"
              class="achieve-item"
        >
            <view class="achieve-name">
                {{item.name}}
            </view>
            <view class="achieve-progress">
                <view class="progress-bar-wrap">
                    <view class="progress-bar" style="width:{{item.progress}}">

                    </view>
                </view>
                <view class="achieve-text">
                    {{item.text}}
                </view>

            </view>
            <view class="achieve-btn-wrap"

                  bindtap="handleGet">
                <image wx:if="{{!item.canGet && !item.hadGot}}" src="{{url}}cant-get-btn.png" class="achieve-btn" data-item="{{item}}"/>
                <image wx:else src="{{url}}{{item.hadGot ? 'got' :'get'}}.png" class="achieve-btn" data-item="{{item}}"/>

            </view>

        </view>
    </scroll-view>
    <!--<view class="achieve-list-wrap">-->
    <!---->
    <!--</view>-->


    <view bindtap="handleReturn" class="return-btn"/>
    <get-my-achieve-dcj-dialog
            bind:tapbutton="handleTapdcj"
            achievePrize="{{achievePrize}}"
            bind:hidetap="handleHidedcj"
            visible="{{showdcjDialog}}"/>
    <get-my-achieve-wwgk-dialog
            bind:tapbutton="handleTapwwgk"
            bind:hidetap="handleHidewwgk"
            visible="{{showwwgkDialog}}"/>
    <get-my-achieve-ycdy-dialog
            bind:tapbutton="handleTapycdy"
            bind:hidetap="handleHideycdy"
            visible="{{showycdyDialog}}"/>
    <get-my-achieve-yljz-dialog
            bind:tapbutton="handleTapyljz"
            bind:hidetap="handleHideyljz"
            visible="{{showyljzDialog}}"/>

    <loggery-not-enough-dialog
            bind:hidetap="handleHideNotEnough"
            visible="{{showyNotEnoughDialog}}"/>

    <account-locked-dialog
            visible="{{isLocked}}"/>
</view>

