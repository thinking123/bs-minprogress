}

.bar {
    margin-left:1rpx;
    margin-right:1rpx;
    width: 4rpx;
    height: 28rpx;
    animation-name: loading;
    background-color: white;
    animation-duration: 0.3s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-direction: alternate;

}

.bar:nth-child(3) {
    animation-delay: 0.3s;
}

.bar:nth-child(2) {
    animation-delay: 0.15s;
}

.bar:nth-child(4) {
    animation-delay: 0.15s;
}

@keyframes loading {
    0% {
        margin-top: 0rpx;
        height: 28rpx;
    }
    15% {
        margin-top: 2rpx;
        height: 24rpx;
        margin-bottom: 2rpx;
    }
    30% {
        margin-top: 4rpx;
        height: 20rpx;
        margin-bottom: 4rpx;
    }
    45% {
        margin-top: 6rpx;
        height: 16rpx;
        margin-bottom: 6rpx;
    }
    60% {
        margin-top: 8rpx;
        height: 12rpx;
        margin-bottom: 8rpx;
    }
    75% {
        margin-top: 10rpx;
        height: 8rpx;
        margin-bottom: 10rpx;
    }
    90% {
        margin-top: 12rpx;
        height: 4rpx;
        margin-bottom: 12rpx;
    }
    100% {
        margin-top: 14rpx;
        height: 0rpx;
        margin-bottom: 14rpx;
    }
}
